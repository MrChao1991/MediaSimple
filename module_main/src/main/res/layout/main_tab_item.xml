<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="@dimen/main_tab_top"
        android:id="@+id/main_tab_icon_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/main_tab_title_tv"
        />
    <TextView
        android:paddingBottom="@dimen/main_tab_bottom"
        android:textColor="@color/main_tab_text"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:id="@+id/main_tab_title_tv"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>